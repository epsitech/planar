# file Makefile
# make file for operation pack PlnrWgmode, release plnrcmbd_genio
# author Alexander Wirthmueller
# date created: 4 Dec 2015
# modified: 4 Dec 2015

SRCROOT = /home/epsi/src
LIBROOT = /home/epsi/lib

CC = g++
CPPFLAGS = -std=c++11 -g -Wall -Os -pthread -DPLNRCMBD

INCS = -I/usr/include/libxml2 -I/usr/include/mysql -I/usr/include/postgresql -I/usr/local/include -I/usr/include
INCS += -I$(SRCROOT)
INCS += -I$(SRCROOT)/dbsplnr
INCS += -I$(SRCROOT)/plnrcmbd -I$(SRCROOT)/plnrcmbd/VecPlnr

OBJECTS = PlnrWgmode_blks.o PlnrWgmode.o
OBJECTS += PlnrWgmodeFd1d.o PlnrWgmodeFd2d.o PlnrWgmodeFem1d.o PlnrWgmodeFem2d.o SqkPlnrWgmode.o

LIBRARY = libplnrwgmode

.SUFFIXES:	.cpp

.cpp.o :
	$(CC) $(CPPFLAGS) $(INCS) -o $@ -c $<

all:	$(LIBRARY)

$(LIBRARY):	$(OBJECTS)
	ar rcs $(LIBRARY).a $(OBJECTS)

install:
	cp $(LIBRARY).a $(LIBROOT)/plnrcmbd/

clean:
	rm -f *.o

