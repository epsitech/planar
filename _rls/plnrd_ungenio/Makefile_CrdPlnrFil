# file Makefile
# make file for CrdPlnrFil card job handler, release plnrd_ungenio
# author Alexander Wirthmueller
# date created: 4 Dec 2015
# modified: 4 Dec 2015

SRCROOT = /Users/epsi/src
LIBROOT = /Users/epsi/lib

CC = g++
CPPFLAGS = -std=c++11 -g -Wall -Os -pthread -DPLNRD

INCS = -I/opt/local/include/libxml2 -I/usr/local/mysql/include -I/opt/local/include/postgresql84 -I/opt/local/include -I/usr/include
INCS += -I$(SRCROOT)
INCS += -I$(SRCROOT)/dbsplnr
INCS += -I$(SRCROOT)/plnrd -I$(SRCROOT)/plnrd/IexPlnr -I$(SRCROOT)/plnrd/VecPlnr

OBJECTS += CrdPlnrFil.o DlgPlnrFilDldcpy.o PnlPlnrFilRec.o PnlPlnrFilDetail.o PnlPlnrFilMNCalc.o QryPlnrFilMNCalc.o PnlPlnrFilHeadbar.o PnlPlnrFilList.o QryPlnrFilList.o

LIBRARY = libcrdplnrfil

.SUFFIXES: .cpp

.cpp.o :
	$(CC) $(CPPFLAGS) $(INCS) -o $@ -c $<

all:	$(LIBRARY)

$(LIBRARY):	$(OBJECTS)
	ar rcs $(LIBRARY).a $(OBJECTS)

install:
	cp $(LIBRARY).a $(LIBROOT)/plnrd/

clean:
	rm -f *.o

